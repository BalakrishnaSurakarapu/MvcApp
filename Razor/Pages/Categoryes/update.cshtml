@page
@model Razor.Pages.Categoryes.updateModel

<form method="Post">
    @* <input asp-for="Category.Id" hidden /> *@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update Category</h2></hr>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0">Category Name</label>
            <input asp-for="Category.Name"  type="text" class="form-control" />
            <aspn asp-validation-for="Name" class="text-danger"></aspn>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="Category.DisplayOrder"  type="text" class="form-control" />
            <aspn asp-validation-for="DisplayOrder" class="text-danger"></aspn>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="Categoryes/Index" class="btn btn-secondary form-control border"> Back To List</a>
            </div>
        </div>
    </div>
</form>

